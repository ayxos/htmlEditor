// Modal
#cheatsheet.modal.fade(tabindex="-1", role="dialog", aria-labelledby="myModalLabel")
	.modal-dialog(role="document")
		.modal-content
			.modal-header
				button.close(type="button", data-dismiss="modal", aria-label="Close")
					span(aria-hidden="true") &#215;
				h4#myModalLabel.modal-title HTML Cheatsheet
			.modal-body
				ul.list-group
					li.list-group-item(role="presentation", ng-repeat='cheat in cheatsheet', style='display: table-footer-group')
						b(role="menuitem", tabindex="-1", style='display:inline-block') {{cheat.code}}
						p(role="menuitem", tabindex="-1", style='display:inline-block;float:right') {{cheat.desc}}

			.modal-footer
				button.close-modal.btn.btn-default(type="button", data-dismiss="modal") Close
